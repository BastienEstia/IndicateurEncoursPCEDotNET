<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndicateurEncoursPCEDotNET"
        mc:Ignorable="d"
        Title="MainWindow" Height="1037" Width="1719.5"
        x:Class="MainWindow" Background="#FF464646">
    <Window.Resources>


        <local:IndicateurPressageBDDDataSet x:Key="IndicateurPressageBDDDataSet"/>
        <CollectionViewSource x:Key="T_Encours_ViewSource" Source="{Binding T_Encours, Source={StaticResource IndicateurPressageBDDDataSet}}"/>


    </Window.Resources>

    <Grid DataContext="{StaticResource T_Encours_ViewSource}" OpacityMask="#FF272727" Background="#FF464646">

        <Grid x:Name="TabGrid" Margin="948,94,278,42">
            <Button x:Name="undoLastOf" Content="Annuler" FontSize="20" HorizontalAlignment="Right" Width="123" Height="59" VerticalAlignment="Bottom" Background="#FF009722" BorderBrush="White"/>

            <Button x:Name="saisieMan" Content="Saisie Manuelle" FontSize="20" HorizontalAlignment="Left" Width="169" Height="59" VerticalAlignment="Bottom" Background="#FF009722" BorderBrush="White"/>

            <Label Content="OF :" Margin="70,-2,0,0" Height="48" VerticalAlignment="Top" FontSize="24" Foreground="White" HorizontalAlignment="Left" Width="53"/>

            <DataGrid Margin="0,53,0,101" ColumnWidth="*" HeadersVisibility="Column" FontSize="24" ItemsSource="{Binding}"/>

            <TextBox x:Name="qtePlaqueTB" Margin="0,-2,2,0" TextWrapping="Wrap" Height="39" VerticalAlignment="Top" FontSize="24" Background="#FF979797" BorderBrush="White" HorizontalAlignment="Right" Width="126"/>

            <Label Content="Nb Pl :" Margin="0,-2,144,0" Height="48" VerticalAlignment="Top" FontSize="24" Foreground="White" HorizontalAlignment="Right" Width="84"/>
            <TextBox x:Name="cdBarreTB" Margin="123,-2,0,0" TextWrapping="Wrap" Height="39" VerticalAlignment="Top" FontSize="24" Background="#FF979797" BorderBrush="White" HorizontalAlignment="Left" Width="130"/>
        </Grid>
        <Grid x:Name="indicGrd1" Margin="749,94,0,140" Background="#FFE80404" HorizontalAlignment="Left" Width="136">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="indicTop" />
                <RowDefinition x:Name="indicMid" />
                <RowDefinition x:Name="indicBot" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" Background="green"/>
        </Grid>
        <Grid x:Name="indicGrdCursor" Margin="749,94,0,140" HorizontalAlignment="Left" Width="136">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="curseurTop" />
                <RowDefinition x:Name="curseurMid" />
                <RowDefinition x:Name="curseurBot" />
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="1"
                Background="yellow"
                />
        </Grid>

        <Button x:Name="validSeuils" Content="Valider Seuils" Margin="749,0,0,42" FontSize="20" Height="58" VerticalAlignment="Bottom" Background="#FF009722" BorderBrush="White" HorizontalAlignment="Left" Width="136"/>

        <Menu Height="24" VerticalAlignment="Top">
            <MenuItem Header=" = _Fichier"/>
            <MenuItem Header="_Affichage"/>
            <MenuItem x:Name="ConfigurationButton" Header="_Configuration">
                <MenuItem Header="_Base de données Access" Click="Settings_Click"/>
            </MenuItem>
        </Menu>
        <Grid Margin="278,94,0,0" HorizontalAlignment="Left" Width="371" Height="317" VerticalAlignment="Top">
            <Rectangle Fill="#FF707070" Stroke="White"/>
            <Separator Margin="0,32,1,270" HorizontalAlignment="Right" Width="369"/>


            <Label Content="Seuil Haut :" Margin="0,57,249,0" FontSize="18" Foreground="White" Height="41" VerticalAlignment="Top" HorizontalAlignment="Right" Width="112"/>

            <TextBox x:Name="SeuilHaut" Text="72" Margin="165,61,159,0" TextWrapping="Wrap" FontSize="18" Background="#FF979797" BorderBrush="Black" Foreground="White" Padding="12,0,0,0" Height="27" VerticalAlignment="Top"/>

            <Label Content="Seuil Bas :" Margin="0,124,266,0" FontSize="18" Foreground="White" Height="36" VerticalAlignment="Top" HorizontalAlignment="Right" Width="95"/>

            <TextBox x:Name="SeuilBas" Text="20" Margin="165,128,159,0" TextWrapping="Wrap" FontSize="18" Background="#FF979797" Foreground="White" Padding="12,0,0,0" BorderBrush="Black" Height="27" VerticalAlignment="Top"/>

            <Label Content="Table/Poste :" Margin="0,258,249,25" FontSize="18" Foreground="White" HorizontalAlignment="Right" Width="112"/>

            <TextBox x:Name="connexionStringInput" Margin="165,189,18,0" TextWrapping="Wrap" FontSize="18" Background="#FF979797" Foreground="White" BorderBrush="Black" Padding="12,0,0,0" Height="27" VerticalAlignment="Top" RenderTransformOrigin="0.173,-0.878"/>

            <Label Content="Paramètres :" Margin="0,1,179,269" FontSize="24" Foreground="White" HorizontalAlignment="Right" Width="192"/>
            <Label Content="Base de données :" Margin="0,189,206,0" FontSize="18" Foreground="White" Height="36" VerticalAlignment="Top" HorizontalAlignment="Right" Width="155"/>
            <TextBox x:Name="TB_Table" Margin="165,265,18,0" TextWrapping="Wrap" FontSize="18" Background="#FF979797" Foreground="White" BorderBrush="Black" Padding="12,0,0,0" Height="27" VerticalAlignment="Top" RenderTransformOrigin="0.173,-0.878"/>

        </Grid>

    </Grid>
</Window>
